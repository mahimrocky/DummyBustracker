<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.StudentActivity">

    <TextView
        android:id="@+id/text_view_bus_1"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_bus_2"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bus_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_bus_3"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bus_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view_bus_4"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_view_bus_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>